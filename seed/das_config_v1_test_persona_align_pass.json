{
  "version": 1,
  "notes": [
    "Test config: validate persona_alignment_v0 gate passes on PROMPT_PACK (compose_prompts).",
    "Use with seed/seed_spec_persona_smoke.json and --compose-prompts --das.",
    "Keeps retries off to reduce noise and cost in the happy path."
  ],
  "defaults": {
    "enabled": true,
    "kCandidates": 1,
    "maxAttempts": 1,
    "eval": [],
    "onHardFail": "stop_run"
  },
  "nodes": {
    "PROMPT_PACK": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds", "persona_alignment_v0"],
      "params": {
        "persona_alignment_v0": {
          "minTagOverlapRatio": 0.25,
          "hardFailOnMustAvoid": true
        }
      }
    },
    "LIB_GEN": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds"]
    },
    "BP_GEN": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds", "crossref"]
    },
    "VAL": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["crossref"]
    },
    "AI_REVIEW": {
      "enabled": false,
      "maxAttempts": 1
    },
    "AI_BANNER": {
      "enabled": false,
      "maxAttempts": 1
    },
    "APPLY": {
      "enabled": false,
      "maxAttempts": 1
    }
  }
}

