{
  "version": 1,
  "notes": [
    "Test config: force PROMPT_PACK persona_alignment_v0 to hard fail.",
    "Used to validate decision_log + stop_run behavior deterministically.",
    "Set minTagOverlapRatio > 1 so overlapRatio can never satisfy it."
  ],
  "defaults": {
    "enabled": true,
    "kCandidates": 1,
    "maxAttempts": 1,
    "eval": [],
    "onHardFail": "stop_run"
  },
  "nodes": {
    "PROMPT_PACK": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds", "persona_alignment_v0"],
      "params": {
        "persona_alignment_v0": {
          "minTagOverlapRatio": 2,
          "hardFailOnMustAvoid": true
        }
      }
    },
    "LIB_GEN": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds"]
    },
    "BP_GEN": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["structural", "bounds", "crossref"]
    },
    "VAL": {
      "kCandidates": 1,
      "maxAttempts": 1,
      "eval": ["crossref"]
    },
    "AI_REVIEW": {
      "enabled": false,
      "maxAttempts": 1
    },
    "AI_BANNER": {
      "enabled": false,
      "maxAttempts": 1
    },
    "APPLY": {
      "enabled": false,
      "maxAttempts": 1
    }
  }
}

