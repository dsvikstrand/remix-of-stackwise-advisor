{
  "version": 2,
  "doc_aliases": {},
  "allow_legacy_only": [],
  "rules": [
    {
      "id": "frontend-youtube",
      "paths": [
        "src/pages/YouTubeToBlueprint.tsx",
        "src/lib/errors.ts",
        "src/lib/generationControls.ts"
      ],
      "required_docs": [
        "docs/product-specs/youtube_to_blueprint_plan.md",
        "docs/product-specs/yt2bp_v0_contract.md"
      ],
      "suggested_sections": [
        "User flow",
        "Error buckets",
        "UI behavior"
      ]
    },
    {
      "id": "frontend-channels",
      "paths": [
        "src/pages/Channels.tsx",
        "src/pages/ChannelPage.tsx",
        "src/pages/Wall.tsx",
        "src/pages/Explore.tsx",
        "src/components/explore/**",
        "src/lib/channel*.ts",
        "src/lib/channelsCatalog.ts",
        "src/hooks/useChannelFeed.ts",
        "src/hooks/useTagFollows.ts"
      ],
      "required_docs": [
        "docs/exec-plans/active/project-3-channel-following.md",
        "docs/exec-plans/active/channels-first-ux-program.md",
        "docs/exec-plans/index.md"
      ],
      "suggested_sections": [
        "Routing and IA",
        "Channel mapping",
        "Feed behavior"
      ]
    },
    {
      "id": "backend-yt2bp",
      "paths": ["server/**"],
      "required_docs": [
        "docs/product-specs/yt2bp_v0_contract.md",
        "docs/ops/yt2bp_runbook.md"
      ],
      "suggested_sections": [
        "API contract",
        "Operational runbook",
        "Failure modes"
      ]
    },
    {
      "id": "eval-pipeline",
      "paths": ["eval/**", "seed/**", "codex/skills/seed-blueprints/scripts/**"],
      "required_docs": [
        "docs/design-docs/seed_ass_spec.md",
        "docs/design-docs/ASS_simple.mmd"
      ],
      "suggested_sections": [
        "Eval classes",
        "Policy config",
        "Gate order"
      ]
    },
    {
      "id": "schema-changes",
      "paths": ["docs/schemas/**", "supabase/**"],
      "required_docs": [
        "docs/schemas/ass_eval_config_schema.md",
        "docs/schemas/eval_scorecard_schema.md",
        "docs/app/product-spec.md"
      ],
      "suggested_sections": [
        "Schema contract",
        "Compatibility",
        "Migration notes"
      ]
    }
  ]
}
